# Multi-Charger Setup Configuration
# Copy this file to multi-charger.env and customize

# Docker Image Settings
IMAGE_NAME="eliodecolli/everest-multi-sim"
# To build locally instead:
# IMAGE_NAME="everest-multi-sim"

# CSMS Connection
CSMS_URL="ws://192.168.1.100:9000/ocpp"

# Charger Configuration
NUM_CHARGERS=5
CHARGER_PREFIX="CP_"

# UI Settings
START_PORT=1880

# OCPP Version (1.6 or 2.0.1)
OCPP_VERSION="1.6"

# EVerest Source Repository
# Required only if building locally (IMAGE_NAME without "/")
# Not needed if pulling from Docker Hub
# EVEREST_CORE_DIR="/path/to/everest-core"

# Output directory for generated configs
MULTI_CHARGER_DIR="./multi-charger-sim"
